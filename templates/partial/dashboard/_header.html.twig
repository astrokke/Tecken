<div class="header-container d-flex flex-column flex-md-row align-items-center p-4 shadow-sm bg-white rounded">
    <div class="profile-image text-center me-md-4">
        {% if user.image %}
            <img class="rounded-circle border shadow"
                 style="width: 80px;
                        height: 80px;
                        object-fit: cover"
                 src="{{ asset('upload/' ~ user.image) }}">
        {% endif %}
    </div>
    <div class="profile-info flex-grow-1">
        <h2 class="fw-bold mb-1">{{ user.firstName }} {{ user.lastName }}</h2>
        <p class="text-muted mb-1 d-flex align-items-center">
            <i class="fa-solid fa-user me-2 text-primary"></i>{{ user.job }}
        </p>
        <p class="text-muted d-flex align-items-center">
            <i class="fa-solid fa-envelope me-2 text-primary"></i>{{ user.mail }}
        </p>
    </div>
    <div class="stats-container d-flex flex-column flex-md-row gap-3 text-center">
        <div class="stat-box p-3 bg-light rounded shadow-sm">
            <p class="h5 fw-bold text-primary">{{ percentDone }}%</p>
            <p class="text-muted">Tâches finies</p>
        </div>
        <div class="stat-box p-3 bg-light rounded shadow-sm">
            <p class="h5 fw-bold text-primary">{{ countActivity }}</p>
            <p class="text-muted">Activités</p>
        </div>
    </div>
</div>
