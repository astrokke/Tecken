<turbo-frame id="csvExport">
<div class="card shadow-sm mb-4 h-100">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Historique des activit√©s facturables</h3>
        <small>{{ periodLabel }}</small>
    </div>
    <div class="card-body h-100 d-flex flex-column">
        <div class="mt-2">
            {% for activity in activitiesBillable %}
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="fw-bold">{{ activity.name }}</span>
                    {% if activity.isBillable == 1 %}
                        <a href="{{ path('export_csv', {id: activity.id, monthOffset: monthOffset}) }}"
                           class="btn btn-sm btn-outline-warning"
                           data-turbo="false">
                            <i class="fa-solid fa-file-export"></i> Export
                        </a>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="card-footer">
        <div class="btn-group">
            <a href="{{ path('dashboard', {view: 'manager', periodView: 'month', monthOffset: monthOffset - 1}) }}"
               class="btn btn-outline-primary btn-sm"><</a>
            <a href="{{ path('dashboard', {view: 'manager', periodView: 'month', monthOffset: 0}) }}"
               class="btn btn-outline-primary btn-sm">Mois</a>
            <a href="{{ path('dashboard', {view: 'manager', periodView: 'month', monthOffset: monthOffset + 1}) }}"
               class="btn btn-outline-primary btn-sm">></a>
        </div>
    </div>
</div>
</turbo-frame>
